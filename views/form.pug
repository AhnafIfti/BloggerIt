extends layout 

block content 
    div(class="container py-4")
        div(class="row justify-content-center")
            div(class="container col-md-8 col-sm-12")
            .row
                h2(class="my-4 font-weight-bolder text-center") Create New
                div(class="col-12 mb-4")
                div(class="my-4 mx-4")
                    - const actionVal = hasData ? `/post/edit/${id}` : "/post/submit"
                    form(method="POST" action=actionVal)
                        div(class="mb-3 mt-3")
                            label(for="title", class="form-label") Title
                            - const valTitle = hasData ? body.title : ""
                            input(type="text", class="form-control", id="title", placeholder="Enter title", name="title", value=valTitle)
                        .mb-3
                            label(for="content") Content
                            - const valContent = hasData ? body.content : ""
                            textarea(class="form-control", rows="5", id="content", name="content") #{valContent}
                        - const buttonVal = hasData ? "Update" : "Post"
                        - const buttonClass = hasData ? "btn btn-warning" : "btn btn-primary"
                        button(type="submit", class=buttonClass) #{buttonVal}