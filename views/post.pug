extends layout 

block content 
    div(class="container py-4")
        div(class="row justify-content-center")
            div(class="container col-8")
                .row 
                    h2(class="my-4 font-weight-bolder text-center") #{post.title}
                    div(class="col-12")
                        h5 #{post.createdBy.fullname} 
                        span #{post.createdAt}
                    .col-12 
                        hr
                        .mb-4 #{post.content}